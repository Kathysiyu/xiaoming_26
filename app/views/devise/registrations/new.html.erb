    <div class="contents_sign_up row">
    <h2>Sign up</h2>
    <h3 id="welcome">Welcome to 小明's world</h3>
    <h3></h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :nickname , {class:'sign_in_nickname'}%> 
        <br />
        <span id="maximum">(8 characters maximum)</em>
        <br />
        <%= f.text_field :nickname, autofocus: true, maxlength: "6" %>
      </div>

      <div class="field">
        <%= f.label :email , {class:'sign_in_email'}%><br />
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :password , {class:'sign_in_password'}%>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation , {class:'sign_in_password_confirmation'}%><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>